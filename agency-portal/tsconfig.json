{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "optimum-components": [
        "dist/optimum-components"
      ],
      "optimum-components/*": [
        "dist/optimum-components/*"
      ],
      "opt-library": [
        "dist/opt-library"
      ],
      "opt-library/*": [
        "dist/opt-library/*"
      ]
    }
  }
}